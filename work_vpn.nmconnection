[connection]
id=work_vpn
type=vpn
autoconnect=false

[vpn]
gateway=$VPN_GATEWAY
ipsec-enabled=yes
ipsec-psk-flags=0
user=$VPN_USERNAME
password-flags=0
service-type=org.freedesktop.NetworkManager.l2tp

[vpn-secrets]
ipsec-psk=$VPN_PSK
password=$VPN_PASSWORD

[ipv4]
method=auto
never-default=true
dns=$VPN_DNS;
dns-search=~;
dns-priority=-1
$VPN_ROUTES

[ipv6]
method=ignore
